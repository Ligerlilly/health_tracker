<h2>total calories eaten</h2>
<h4 id= 't_cals' ><%= current_user.total_cals()  %></h4>

<%= form_tag foods_path, method: 'get', remote: true do %>
  <%= label_tag :search %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>

<% end %>
<table class='table table-hover '>
  <tr>
    <th>
      food
    </th>
    <th>
      calories
    </th>
    <th>

    </th>
  </tr>
  <tbody id='foods'>

  </tbody>
</table>
<h3>Foods eaten</h3>

<table class="table" >
  <tr>
    <th>
      food
    </th>
    <th>
      cals
    </th>
    <th>

    </th>
  </tr>
  <tbody id='foods-list'>


  <% current_user.meals.each do |meal| %>
    <tr id="meal-<%= meal.id %>">
      <td>
        <%= meal.food.name %>
      </td>
      <td>
        <%= meal.food.calories %>
      </td>
      <td>
        <%= link_to "Delete", meal_path(meal), remote: true, data: {method: "delete", confirm: "You sure dawg?"} %>
      </td>
    </tr>

  <% end %>
</tbody>
</table>
